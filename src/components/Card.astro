---
export interface Props {
    title: string;
    description: string;
    link?: string;
    image?: string;
}
const { title, description, link,  image} = Astro.props;
---
<a href={link} class="bg-slate-300/50 px-5 py-10 w-full rounded-lg shadow-lg shadow-slate-900/50 hover:bg-slate-300 hover:scale-105 transition-all duration-300">
    <div class="flex justify-center">
        <img src={image} alt="..." class="w-1/2">
    </div>
    <div class="flex justify-between flex-col">
        <h3 class="text-2xl text-center font-bold mt-2">
            {title}
        </h3>
        <p class="text-lg mt-2 text-pretty">{description}</p>
    </div>
</a>